{
  "manifest_version": 3,
  "name": "Querify",
  "version": "1.0",
  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "http://127.0.0.1:5500/*",
    "https://www.google.com/search*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Search Query Optimizer",
    "default_icon" : "icon.png"
  }
}
